<Page x:Class="Test.Views.Page.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d" 
     d:DesignHeight="300" d:DesignWidth="200" VerticalAlignment="Center" HorizontalAlignment="Center"
      Title="AuthPage">

    <Grid>
        <StackPanel Width="200">
            <TextBlock
			Margin="0,0,0,30"
			HorizontalAlignment="Center"
			FontFamily="Montserrat"
			FontSize="20"
			FontWeight="ExtraBold"
			Text="Авторизация" />
            <TextBox Name="Login" md:HintAssist.Hint="Логин" md:HintAssist.IsFloating="True" HorizontalContentAlignment="Center"/>
            <PasswordBox Name="Password" md:HintAssist.Hint="Пароль" md:HintAssist.IsFloating="True"  HorizontalContentAlignment="Center"/>
            <Button Name="BtnAuth" Click="BtnAuth_Click" Content="Вход" Margin="0,5" Style="{DynamicResource MaterialDesignPaperButton}" Cursor="Hand"/>
            <Button Name="BtnReg" Click="BtnReg_Click"  Content="Регистрация"  Margin="0,5" Style="{DynamicResource MaterialDesignPaperButton}" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Page>
