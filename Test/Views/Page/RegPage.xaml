<Page x:Class="Test.Views.Page.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="250" VerticalAlignment="Center" HorizontalAlignment="Center"    
      Title="RegPage">

    <StackPanel Width="250">
        <TextBlock
			Margin="0,0,0,30"
			HorizontalAlignment="Center"
			FontFamily="Montserrat"
			FontSize="20"
			FontWeight="ExtraBold"
			Text="Регистрация" />
        <TextBox Name="Login" md:HintAssist.Hint="Логин" md:HintAssist.IsFloating="True"/>
        <PasswordBox Name="Password" md:HintAssist.Hint="Пароль" md:HintAssist.IsFloating="True"/>
        <Button Name="BtnReg" Click="BtnReg_Click"  Content="Зарегистрироваться" Margin="0,5" Style="{DynamicResource MaterialDesignPaperButton}" Cursor="Hand"/>
    </StackPanel>
</Page>
